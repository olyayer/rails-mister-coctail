<!-- cocktails/id/doses/new -->
<h3><%= @cocktail.name  %></h3>
<p>
  <%= link_to "Add an inredients", new_coctail_dose_path(@cocktail)   %>
</p>

<ul>

  <% @cocktail.doses.each do |dose| %>

    <li> <%= dose.ingredient.name %>: <%= dose.description %>
      <%= link_to "Delete", dose_path(dose), method: delete class: "btn btn-danger btn-default" %>

    </li>

  <% end %>


</ul>

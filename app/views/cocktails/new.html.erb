<div style="max-width: 700px; margin: 0 auto;">
  <h2>Create a cocktail</h2>

    <%= simple_form_for @cocktail do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit "add a cocktail",  class: "btn btn-primary btn-default" %>

  <% end %>
</div>

